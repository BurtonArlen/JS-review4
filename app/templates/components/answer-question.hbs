{{#if answerQuestion}}
  <div>
    <form>
      <div class="form-group">
        <label for="answer">Answer Here</label>
        {{input value=answer id="answer"}}
      </div>
      <button {{action 'answer' question}}>Answer</button>
    </form>
  </div>
{{else}}
    <button {{action 'answerQuestion'}}>{{question-popularity question}}Awnser this question{{question-popularity question}}</button>
{{/if}}
