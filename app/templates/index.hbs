
<div class="container">
  <div class="jumbotron">
    <h1>SUPER QnA</h1>
    <p>{{#link-to 'about'}}About{{/link-to}} | {{#link-to 'info'}}Contact Info{{/link-to}}</p>
  </div>
  {{new-question save2="save3"}}
    {{#each model as |question|}}
      <div class="question">
        {{question-tile answer="answer" question=question}}
      {{#if updateQuestionForm}}
        <h4>Update</h4>
          <div>
            <form>
              <div class="form-group">
                <label for="ask">Question Update</label>
                {{input value=ask id="ask" placeholder=question.ask}}
              </div>

              <button {{action 'update' question}}>Save</button>
            </form>
          </div>
      {{else}}
          <button {{action 'updateQuestionForm'}}>Update</button>
      {{/if}}
    </div>
    {{/each}}
</div>
<div class="container">
  <div class="favorited">
    <h1>Favorited Questions</h1>
    {{display-favorites answer="answer" question=question}}
  </div>
</div>
